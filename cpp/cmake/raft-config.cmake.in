@PACKAGE_INIT@

cmake_minimum_required(VERSION 3.17)

@RAFT_BUILD_DIR_EXPORT_SETTINGS@

# make the bundled find modules in this directory available
list(PREPEND CMAKE_MODULE_PATH "${CMAKE_CURRENT_LIST_DIR}")

include(CMakeFindDependencyMacro)

include("${CMAKE_CURRENT_LIST_DIR}/raft-targets.cmake")

find_dependency(CUDAToolkit)

if(NOT TARGET raft::spdlog_header_only)
  find_dependency(spdlog @RAFT_MIN_VERSION_spdlog@)
endif()

find_dependency(Thrust @RAFT_MIN_VERSION_Thrust@)
thrust_create_target(raft::Thrust FROM_OPTIONS)

list(POP_FRONT CMAKE_MODULE_PATH)

check_required_components(raft)

set(${CMAKE_FIND_PACKAGE_NAME}_CONFIG "${CMAKE_CURRENT_LIST_FILE}")

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(${CMAKE_FIND_PACKAGE_NAME} CONFIG_MODE)
